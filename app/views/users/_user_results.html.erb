<% if params[:action] == 'searchu' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>
<% if @result.present? %>
<div class="well results-block">
  <% @result.each do |item| %>
    <strong>Email: </strong> <%= item.email %> <%= item.id%>
    <% if @my_friends.include?(item.id)%>
      <span class="label label-default">
          Already added
    <% else %>
    <%= link_to 'add to friends',
                    '#',
                    class: "btn btn-xs btn-success", method: :post, remote: true%>
    <% end %>
        </span>
  <% end %>
</div>
<% end %>