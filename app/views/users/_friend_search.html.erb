<div id="user-lookup">
  <h3>Search for users</h3>
  <%= form_with url: search_users_url, method: :get, id: :user_lookup_form do |form| %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10" id='text-field'>
        <%= form.text_field :user, placeholder: "Search by name or email", autofocus: true,
                            class: "form-control search-box input-lg" %>
      </div>
      <div class="col-md-2">
        <%= form.button type: :submit, class: "btn btn-lg btn-success" do %>
          <i class="fa fa-search"></i> Search user
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="user_search">
</div>

