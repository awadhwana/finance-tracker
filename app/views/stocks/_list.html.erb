        <tr>
          <th>table id</th>
          <th>u id</th>
          <th>s id</th>
        </tr>
      </thead>
      <tbody>
        <% @user.user_stocks.each do |a|%>
        <tr>
          <td><%= a.id%></td>
          <td><%= a.user_id%></td>
          <td><%= a.stock_id%></td>
        </tr>
        <% end %>
      </tbody>
    </table>